<section class="left-33">
	<h3>Events</h3>
	<a href="/events/new" class="button">Create an Event</a>
	
	<ul>
		<li>Filter</li>
		<li><a href="">All events (<%= @user.user_event_associations.length %>)</a></li>
		<li><a href="">Events I'm attending</a></li>
		<li><a href="">Events I created</a></li>
		<li><a href="">Events I'm invited to (<%= @user.new_invites.length %>)</a></li>
	</ul>
	
	<% if @user.new_invites.length != 0 %>
		<% @user.new_invites.each do |invite| %>
			<p>
				<a href="/invites/<%= invite.slug %>"><%= invite.event.name %></a>
			</p>
		<% end %>
	<% end %>
	
	<% if @user.people_matches.length != 0 %>
		<h4>Matches (<%= @user.people_matches.length %>)</h4>
		<% @user.people_matches.each do |match| %>
			<p>
				<%= match.name %>
			</p>
		<% end %>
	<% else %>
		<h4>No matches yet.</h4>
	<% end %>
</section>

<section class="right-67">
	<% if @user.user_event_associations.length != 0 %>
		<% @user.user_event_associations.each do |assoc| %>
			<article>
				<% if assoc.admin %>
					<span>Admin</span>
				<% end %>
				<h1><a href="/events/<%= assoc.event.permalink %>"><%= assoc.event.name %></a></h1>
				<p><%= assoc.event.description %></p>
				<p><%= assoc.event.location %></p>
				<p><%= assoc.event.start_date.strftime("%I:%M %p") %></p>
				<p><%= assoc.event.end_date.strftime("%I:%M %p") %></p>
			</article>
		<% end %>
	<% else %>
		<article>
			<h1>You have no events yet.</h1>
			<a href="/events/new">Create one now!</a>
		</article>
	<% end %>
</section>



