<!doctype html>
<html>
	<head>
		<title>Hello, my name is Proximate.</title>
		<link rel="stylesheet" type="text/css" href="/style.css" />
		<link href='http://fonts.googleapis.com/css?family=Raleway:100|Sue+Ellen+Francisco|Istok+Web:700italic,400,700,400italic' rel='stylesheet' type='text/css'>
	    
		<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"></script>
		
		<!--[if IE]>
			<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
			<style type="text/css">
				.clear {
					display: block;
					zoom: 1;
				}
			</style>
		<![endif]-->

	</head>
	<body>
		<div class="container <%= @event.color if !@event.nil? %>">
			
			<div id="top">
		  		<p>Welcome, <em><%= current_user.name %></em></p>
			</div>
			
			<div id="mid">
			  	<% if current_user %>
			      <form action="/logout" method="post">
			        <input name="_method" type="hidden" value="delete" />
			        <input type="submit" value="Sign Out" />
			      </form>
			  	<% end %>
			    <%= yield %>

			</div>
			
			<div id="bot"></div>
			
			<footer>
				Powered by <a href="/">Proximately</a>
			</footer>

		</div> <!-- //container -->
		
	    <%= erb :flash %>
		<script src="/js/scripts.js"></script>
	</body>
</html>
